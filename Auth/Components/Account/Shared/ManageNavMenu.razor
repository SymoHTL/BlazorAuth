@inject SignInManager<ApplicationUser> SignInManager

<MudList>
    <MudListItem>
        <MudLink Href="account/manage">Profile</MudLink>
    </MudListItem>
    <MudListItem>
        <MudLink Href="account/manage/email">Email</MudLink>
    </MudListItem>
    <MudListItem>
        <MudLink Href="account/manage/changePassword">Password</MudLink>
    </MudListItem>
    @if (_hasExternalLogins) {
        <MudListItem>
            <MudLink Href="account/manage/externalLogins">External logins</MudLink>
        </MudListItem>
    }
    <MudListItem>
        <MudLink Href="account/manage/twoFactorAuthentication">Two-factor authentication</MudLink>
    </MudListItem>
    <MudListItem>
        <MudLink Href="account/manage/personalData">Personal data</MudLink>
    </MudListItem>
</MudList>

@code {
    private bool _hasExternalLogins;

    protected override async Task OnInitializedAsync() {
        _hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }

}