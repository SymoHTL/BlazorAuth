@inject SignInManager<ApplicationUser> SignInManager

<MudList Clickable="true">
    <MudListItem Class="p-0">
        <MudLink Class="d-block w-100 h-100 p-2" Href="account/manage" Underline="Underline.None">Profile</MudLink>
    </MudListItem>
    <MudListItem Class="p-0">
        <MudLink Class="d-block w-100 h-100 p-2" Href="account/manage/email" Underline="Underline.None">Email</MudLink>
    </MudListItem>
    <MudListItem Class="p-0">
        <MudLink Class="d-block w-100 h-100 p-2" Href="account/manage/changePassword" Underline="Underline.None">Password</MudLink>
    </MudListItem>
    @if (_hasExternalLogins) {
        <MudListItem Class="p-0">
            <MudLink Class="d-block w-100 h-100 p-2" Href="account/manage/externalLogins" Underline="Underline.None">External logins</MudLink>
        </MudListItem>
    }
    <MudListItem Class="p-0">
        <MudLink Class="d-block w-100 h-100 p-2" Href="account/manage/twoFactorAuthentication" Underline="Underline.None">Two-factor authentication</MudLink>
    </MudListItem>
    <MudListItem Class="p-0">
        <MudLink Class="d-block w-100 h-100 p-2" Href="account/manage/personalData" Underline="Underline.None">Personal data</MudLink>
    </MudListItem>
</MudList>

@code {
    private bool _hasExternalLogins;

    protected override async Task OnInitializedAsync() {
        _hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }

}